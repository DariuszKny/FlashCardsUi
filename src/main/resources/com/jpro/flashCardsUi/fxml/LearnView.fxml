                        <Insets left="30.0" />
                     </HBox.margin>
                  </JFXButton>
                  <JFXButton fx:id="goodButton" buttonType="RAISED" layoutX="62.0" layoutY="10.0" onAction="#updateFleshCardToGood" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #C4D82D; -fx-background-radius: 20px;" text="GOOD">
                     <HBox.margin>
                        <Insets left="30.0" />
                     </HBox.margin>
                  </JFXButton>
                  <JFXButton fx:id="doneButton" buttonType="RAISED" layoutX="114.0" layoutY="10.0" onAction="#updateFleshCardToDone" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #2BB34B; -fx-background-radius: 20px;" text="DONE">
                     <HBox.margin>
                        <Insets left="30.0" right="30.0" />
                     </HBox.margin>
                  </JFXButton>
               </children>
               <padding>
                  <Insets top="30.0" />
               </padding>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
