<AnchorPane prefHeight="519.0" prefWidth="771.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jpro.flashCardsUi.viewControllers.LearnViewController">
   <children>
      <VBox layoutX="98.0" layoutY="41.0" prefHeight="421.0" prefWidth="550.0" style="-fx-background-color: #eec1ad;">
         <children>
            <JFXButton fx:id="nextButton" buttonType="RAISED" onAction="#nextFleshCard" prefHeight="42.0" prefWidth="144.0" text="NEXT FLASHCARD">
               <VBox.margin>
                  <Insets left="200.0" top="20.0" />
               </VBox.margin>
            </JFXButton>
            <JFXTextField fx:id="inputTextField" editable="false" prefColumnCount="30" prefHeight="40.0" prefWidth="444.0">
               <VBox.margin>
                  <Insets left="50.0" right="50.0" top="20.0" />
               </VBox.margin>
            </JFXTextField>
            <JFXButton fx:id="checkButton" buttonType="RAISED" layoutX="10.0" layoutY="10.0" onAction="#checkFleshCard" prefHeight="42.0" prefWidth="144.0" text="CHECK ANSWER">
               <VBox.margin>
                  <Insets left="200.0" top="20.0" />
               </VBox.margin>
            </JFXButton>
            <JFXTextField fx:id="outputTextField" editable="false" layoutX="10.0" layoutY="52.0" prefColumnCount="30" prefHeight="40.0">
